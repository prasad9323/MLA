<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingTop="@dimen/activity_vertical_margin" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/content_agree" />
    <Button
        android:id="@+id/button1"
        android:background="@android:color/transparent"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:id="@+id/button2"
        android:background="@android:color/transparent"
        android:paddingBottom="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disagree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    <TextView android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agreement"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView android:textAppearance="?android:textAppearanceLarge"
        android:layout_gravity="center"
        android:id="@+id/temp"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:layout_marginBottom="20.0dip"
        android:textAlignment="center"
        android:text="Please read the following text carefully before proceeding further.These may be updated in the future as the app updates."
        android:layout_below="@id/textView22" />
    <TextView android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:textAlignment="center"
        android:text="Terms and conditions"
        android:layout_below="@id/temp"
        android:layout_centerHorizontal="true" />
    <ScrollView android:id="@+id/ScrollView01"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="?actionBarSize"
        android:layout_below="@id/term"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:textAppearance="?android:textAppearanceLarge"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is not guaranteed that this app will work 100% of the time since it is highly depending on the internet as well as location reporting capability of the device, the app's code is working fine when required conditions are satisfied.However, those may be not available in real world. Android may check for location updates depending on it's policy, hence this app is not at fault if it fails to work.It is recommended that you test this app to your desired location first few times to see if it is meeting all the conditions to work.By pressing 'Agree' button below, you accept the terms that you are aware of these conditions,the developer is not responsible for any potential misleads or losses occurred while using this app." />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>